@layout AccountLayout
@inherits Shop.UI.Shared.ShopPage

@code {
    [CascadingParameter] 
    public AccountLayout accountLayout { get; set; } = default!;
    
    protected void StartLoading( string? message )
    {
        accountLayout.StartLoadingComponent( message );
    }
    protected void StopLoading()
    {
        accountLayout.StopLoadingComponent();
    }
}