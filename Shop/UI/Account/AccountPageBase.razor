@layout AccountLayout
@inherits Shop.UI.Shared.PageBase

@code {
    [CascadingParameter] 
    public AccountLayout Layout { get; set; } = default!;
    
    protected override void StartLoading( string? message )
    {
        Layout.StartLoadingComponent( message );
    }
    protected override void StopLoading()
    {
        Layout.StopLoadingComponent();
    }
}