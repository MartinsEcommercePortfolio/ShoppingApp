@inherits Shop.Razor.Shared.ShopPage
@layout AuthenticationLayout
@using Shop.Infrastructure.Loading

@code 
{
    [Inject] public LoadingService LoadingService { get; set; } = default!;

    protected void StartLoading( string? message )
    {
        LoadingService.StartLoading( message );
    }
    protected void StopLoading()
    {
        LoadingService.StopLoading();
    }
}