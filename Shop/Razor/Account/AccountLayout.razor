@using Shop.Razor.Shared
@using Shop.Razor.Shared.Components
@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase
@layout MainLayout

<AuthorizeView>
    
    <Authorized>
        <div class="content-container">
            <div class="user-container">
                <LoadingPanel/>
                <nav class="account-nav">
                    <ul class="nav account-nav-list">
                        <AccountMenuOptions/>
                    </ul>
                </nav>
                <hr class="divider"/>
                @Body
            </div>
        </div>
    </Authorized>

    <NotAuthorized>
        <AccessDenied/>
    </NotAuthorized>
    
</AuthorizeView>